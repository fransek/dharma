{
  "homepage": "https://github.com/fransek/dharma#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fransek/dharma"
  },
  "bugs": {
    "url": "https://github.com/fransek/dharma/issues"
  },
  "scripts": {
    "build": "pnpm -F \"./packages/*\" build",
    "sandbox": "pnpm -F sandbox dev",
    "docs:dev": "pnpm -F docs dev",
    "docs:build": "pnpm -F docs build",
    "ci:publish": "changeset publish",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui --coverage",
    "test:coverage": "vitest --run --coverage --passWithNoTests --silent passed-only",
    "lint": "eslint",
    "validate": "tsc --noEmit && pnpm lint && pnpm test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^25.0.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitest/coverage-v8": "4.0.15",
    "@vitest/ui": "4.0.15",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "rollup": "^4.53.3",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "bash -c tsc --noEmit"
    ]
  }
}
