{
  "homepage": "https://github.com/fransek/dharma#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fransek/dharma"
  },
  "bugs": {
    "url": "https://github.com/fransek/dharma/issues"
  },
  "scripts": {
    "build": "pnpm -F \"./packages/*\" build",
    "demo:dev": "pnpm -F demo dev",
    "demo:build": "pnpm -F demo build",
    "ci:publish": "changeset publish",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui --coverage",
    "test:coverage": "vitest --run --coverage --passWithNoTests",
    "lint": "eslint",
    "prepare": "husky",
    "docs": "typedoc"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.33.0",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "rollup": "^4.46.2",
    "typedoc": "^0.28.12",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "bash -c tsc --noEmit"
    ]
  }
}
