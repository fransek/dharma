---
import { Tabs, TabItem, Code } from '@astrojs/starlight/components';

interface Props {
  npm: string;
  pnpm: string;
  yarn: string;
}

const { npm, pnpm, yarn } = Astro.props;
---

<Tabs syncKey='package-manager'>
  <TabItem label='npm'>
    <Code lang='sh' code={npm} />
  </TabItem>
  <TabItem label='pnpm'>
    <Code lang='sh' code={pnpm} />
  </TabItem>
  <TabItem label='yarn'>
    <Code lang='sh' code={yarn} />
  </TabItem>
</Tabs>
